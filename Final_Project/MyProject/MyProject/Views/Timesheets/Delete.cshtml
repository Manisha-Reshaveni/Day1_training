﻿@model MyProject.Models.Timesheet

@{
    ViewBag.Title = "Delete";
}
<style>
    body {
        font-family: 'Arial', sans-serif;
        background: linear-gradient(120deg, #185a9d, #43cea2); /* Gradient background */
        color: #93B1A6;
        margin: 0;
        padding: 50px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-start;
        min-height: 100vh;
    }

    h2, h3, h4 {
        color: #000; /* Black color for headings */
        text-align: center;
    }

    .form-container {
        background-color: #183D3D; /* Form container background color */
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin: 0 auto;
        max-width: 600px;
    }

    dl dt {
        font-weight: bold;
        color: black; /* Greenish color for field labels */
    }

    dl dd {
        margin-bottom: 10px;
       
        color:navajowhite ; /* Greenish color for field labels */
    }

    .form-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 20px;
    }

    .delete-button {
        background-color: #FF6363; /* Red color for Delete button */
        color: #040D12;
        padding: 10px 20px;
        font-size: 16px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .delete-button:hover {
            background-color: #e55353; /* Darker red on hover */
            transform: scale(1.05); /* Slight zoom effect */
        }

        .delete-button:active {
            transform: scale(0.95); /* Pressed effect */
        }

    .back-button {
        display: inline-block;
        text-align: center;
        text-decoration: none;
        padding: 10px 20px;
        font-size: 16px;
        border-radius: 5px;
        font-weight: bold;
        background-color: #4caf50; /* Green button */
        color: #040D12; /* Dark text color */
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .back-button:hover {
            background-color: #183D3D; /* Darker hover effect */
            color: #93B1A6; /* Light text color */
            transform: scale(1.05);
        }

        .back-button:active {
            transform: scale(0.95);
        }
 
</style>

<h2>Delete</h2>

